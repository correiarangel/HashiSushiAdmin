<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSmoky"
    android:padding="20dp"
    tools:context=".views.ActEditarUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/joao_da_silva"
            android:inputType="textPersonName|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_user_pontos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/points"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPontos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/joao_da_silva"
            android:inputType="textPersonName|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/txt_is_adm"
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnIsAdmin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorSilver" />

        <TextView
            android:id="@+id/textview_user_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpf"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/user_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_user_cpf"
            android:hint="@string/_123_456_789_01"
            android:inputType="number|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp"
            app:mask="###.###.###-##" />

        <TextView
            android:id="@+id/textview_user_born_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_user_cpf"
            android:text="@string/bord_date"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/user_born_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_01_01_2019"
            android:inputType="date"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp"
            app:mask="##/##/####" />

        <TextView
            android:id="@+id/textview_user_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cep"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:visibility="gone" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/user_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:enabled="false"
            android:hint="@string/_13870_001"
            android:inputType="number"
            android:text="13880-000"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textColorHint="@color/colorHintText"
            android:visibility="gone"
            app:mask="#####-###" />

        <TextView
            android:id="@+id/textview_user_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/state"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/user_adress_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/sao_paulo"
            android:inputType="text"
            android:text="@string/SP"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textColorHint="@color/colorHintText"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textview_user_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/vargem_grande_do_sul"
            android:inputType="text"
            android:text="@string/vgs"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText" />

        <TextView
            android:id="@+id/textview_user_address_neighborhood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/neighborhood"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_address_neighborhood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/jardim_nova_alianca"
            android:inputType="text|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_user_address_street"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/endere_o"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_address_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rua_aparecida"
            android:inputType="text|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_user_address_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_address_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_99"
            android:inputType="text|number|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textview_user_reference_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reference"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_reference_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/referencepoint"
            android:inputType="text|textCapWords"
            android:textAllCaps="true"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/whatsapp"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_19_99999_9999"
            android:inputType="phone|textCapCharacters"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp"
            app:mask="(##)#.####-####" />

        <TextView
            android:id="@+id/textview_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/e_mail"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_email"
            android:inputType="textEmailAddress"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textColorHint="@color/colorHintText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pass"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorHintText">

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@android:color/background_light"
                android:textColorHint="@color/colorHintText"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorHintText">

            <EditText
                android:id="@+id/user_password_RETYPE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_RETYPE"
                android:inputType="textPassword"
                android:textColor="@color/colorHintText"
                android:textColorHint="@color/colorHintText"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_user_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/screen_border"
            android:text="@string/finalizar"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>